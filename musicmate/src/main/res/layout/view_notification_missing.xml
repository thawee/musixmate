<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="0dp"
        android:layout_gravity="center">
    <ImageView
        android:id="@+id/notification_bgcolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/rounded" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical">
    <ImageView
        android:id="@+id/notification_coverart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/ic_broken_image_black_24dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal|center_vertical"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" android:contentDescription="TODO" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_gravity="center">
        <ImageView
            android:id="@+id/notification_text_bgcolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/rounded" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/notification_coverart"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="20sp"
            android:ellipsize="end"
            android:id="@+id/notification_title"
            android:paddingTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:maxLines="1"/>
        <TextView
            android:textSize="@dimen/notification_artist"
            android:ellipsize="end"
            android:id="@+id/notification_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtitle"
            android:maxLines="1" />
        <TextView
            android:textSize="@dimen/notification_artist"
            android:ellipsize="end"
            android:id="@+id/notification_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Played on XXXX"
            android:maxLines="1" />
    </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    </FrameLayout>
</RelativeLayout>
