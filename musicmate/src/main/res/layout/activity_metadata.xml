<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MetadataActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            >

            <ImageView
                android:id="@+id/main_imageview_placeholder"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg"
                android:tint="#11000000"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.9"
                />

            <com.github.florent37.shapeofview.shapes.CutCornerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="@dimen/dimen_4_dp"
                android:layout_marginRight="@dimen/dimen_4_dp"
                android:layout_marginBottom="@dimen/dimen_4_dp"
                app:shape_cutCorner_topLeftSize="@dimen/dimen_4_dp"
                app:shape_cutCorner_topRightSize="@dimen/dimen_4_dp"
                app:shape_cutCorner_bottomLeftSize="@dimen/dimen_4_dp"
                app:shape_cutCorner_bottomRightSize="@dimen/dimen_4_dp">
            <FrameLayout
                android:id="@+id/main.framelayout.title"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@color/float_transparent_80"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.3"
                >

                <LinearLayout
                    android:id="@+id/main.linearlayout.title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/main.textview.title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="bottom|center"
                        android:text="Title"
                        android:maxLines="1"
                        android:textColor="@android:color/white"
                        android:textSize="30sp"
                        />

                    <!-- quality -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:layout_centerVertical="true"
                        android:background="@color/float_transparent"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_gravity="bottom">
                        <RelativeLayout
                            android:id="@+id/media_panel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom|center_horizontal"
                            android:layout_centerVertical="true"
                            android:background="@color/transparent"
                            android:paddingTop="0dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:layout_gravity="bottom|center_horizontal">

                            <TextView
                                android:id="@+id/media_format"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:gravity="left|right|center|start|end"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:layout_marginRight="6dp"
                                android:layout_centerVertical="true"
                                android:minWidth="30dp"
                                android:minHeight="14dp"
                                android:textColor="@color/text_info_roundect_value"
                                android:textSize="11sp"
                                android:background="@drawable/shape_round_format_normal"
                                android:text="FLAC"/>

                            <TextView
                                android:id="@+id/media_samplerate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:gravity="left|right|center|start|end"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:layout_marginRight="6dp"
                                android:layout_centerVertical="true"
                                android:minWidth="30dp"
                                android:minHeight="14dp"
                                android:textColor="@color/text_info_roundect_value"
                                android:textSize="11sp"
                                android:background="@drawable/shape_round_format_normal"
                                android:layout_toRightOf="@+id/media_format"
                                android:text="16 bits/44.1 kHz"/>

                            <TextView
                                android:id="@+id/media_bitrate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:gravity="left|right|center|start|end"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:layout_marginRight="6dp"
                                android:layout_centerVertical="true"
                                android:minWidth="40dp"
                                android:minHeight="14dp"
                                android:textColor="@color/text_info_roundect_value"
                                android:textSize="11sp"
                                android:background="@drawable/shape_round_format_normal"
                                android:layout_toRightOf="@+id/media_samplerate"
                                android:text="1050Kbps"/>

                            <TextView
                                android:id="@+id/media_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:gravity="left|right|center|start|end"
                                android:layout_marginLeft="@dimen/dimen_24_dp"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:layout_marginRight="6dp"
                                android:layout_centerVertical="true"
                                android:minWidth="30dp"
                                android:minHeight="14dp"
                                android:textColor="@color/text_info_roundect_value"
                                android:textSize="11sp"
                                android:background="@drawable/shape_round_format_normal"
                                android:layout_toRightOf="@+id/media_bitrate"
                                android:text="5:20"/>
                            <TextView
                                android:id="@+id/media_filesize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:gravity="left|right|center|start|end"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:layout_marginRight="6dp"
                                android:layout_centerVertical="true"
                                android:minWidth="30dp"
                                android:minHeight="14dp"
                                android:textColor="@color/text_info_roundect_value"
                                android:textSize="11sp"
                                android:background="@drawable/shape_round_format_normal"
                                android:layout_toRightOf="@+id/media_duration"
                                android:text="10 MB"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        android:visibility="gone"
                        app:mpb_progressStyle="horizontal"
                        android:background="@drawable/shape_round_format_black"
                        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal" />
                    <TextView
                        android:id="@+id/media_path"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="0dp"
                        android:textSize="8dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:background="@color/transparent"
                        android:text="File Location"/>
                </LinearLayout>
            </FrameLayout>
            </com.github.florent37.shapeofview.shapes.CutCornerView>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        app:behavior_overlapTop="1dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4_dp"
            android:layout_marginBottom="@dimen/dimen_2_dp"
            android:layout_marginLeft="@dimen/dimen_2_dp"
            android:layout_marginRight="@dimen/dimen_2_dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="@dimen/dimen_8_dp">
            <LinearLayout
                android:id="@+id/header"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/float_transparent_60"
                >
               <RelativeLayout
                   android:id="@+id/tab_panel"
                    android:layout_width="match_parent"
                    android:layout_height="38dp">
                    <com.github.florent37.shapeofview.shapes.CutCornerView
                        android:id="@+id/tab_tag_panel"
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        app:shape_cutCorner_topLeftSize="@dimen/dimen_16_dp"
                        app:shape_cutCorner_topRightSize="@dimen/dimen_24_dp"
                        android:layout_marginLeft="@dimen/dimen_4_dp"
                        android:layout_marginTop="@dimen/dimen_4_dp"
                        android:layout_marginBottom="@dimen/dimen_4_dp">
                        <LinearLayout
                            android:id="@+id/tab_tag"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_gravity="left|bottom"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_tag_outline_black_24dp"
                                android:layout_marginLeft="@dimen/dimen_24_dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/grey200"
                                android:text="TAGS"/>
                        </LinearLayout>
                    </com.github.florent37.shapeofview.shapes.CutCornerView>
                    <com.github.florent37.shapeofview.shapes.CutCornerView
                        android:id="@+id/tab_music_brainz_panel"
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        app:shape_cutCorner_topLeftSize="@dimen/dimen_24_dp"
                        app:shape_cutCorner_topRightSize="@dimen/dimen_16_dp"
                        android:layout_marginLeft="178dp"
                        android:layout_marginRight="@dimen/dimen_4_dp"
                        android:layout_marginTop="@dimen/dimen_4_dp"
                        android:layout_marginBottom="@dimen/dimen_4_dp">
                        <LinearLayout
                            android:id="@+id/tab_music_brainz"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_gravity="left|bottom"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/musicbrainz"
                                android:layout_marginLeft="@dimen/dimen_24_dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="MusicBrainz"
                                android:textColor="@color/grey200"/>
                        </LinearLayout>
                    </com.github.florent37.shapeofview.shapes.CutCornerView>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/dimen_4_dp"
                       android:background="@color/colorPrimaryDark"
                       android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:layout_below="@id/header"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/float_transparent"
        app:layout_anchor="@id/main.textview.title"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:title=""
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_imageview_placeholder"
        android:layout_width="@dimen/avatar_image_width"
        android:layout_height="@dimen/avatar_image_width"
        android:layout_gravity="top|left"
        android:layout_marginLeft="@dimen/dimen_4_dp"
        android:src="@drawable/ic_launcher"
        app:border_color="@android:color/white"
        app:border_width="2dp"
        app:finalHeight="@dimen/avatar_image_final_width"
        app:finalYPosition="16dp"
        app:layout_behavior="apincer.android.uamp.ui.widget.AvatarImageBehavior"
        app:startHeight="2dp"
        app:startToolbarPosition="16dp"
        app:startXPosition="2dp"
        />
</android.support.design.widget.CoordinatorLayout>