<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary_light"
    android:fitsSystemWindows="true"
    tools:context=".ui.MediaTagEditorActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimaryDark"
            app:expandedTitleMarginStart="1dp"
            app:expandedTitleMarginEnd="1dp"
            app:titleEnabled="false"
            android:fitsSystemWindows="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">
                <apincer.android.uamp.ui.view.SquareImageView
                    android:id="@+id/image"
                    android:src="@drawable/ic_music"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7"/>
                <TextView
                    android:id="@+id/image_dimension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="bottom|left|end"
                    android:layout_marginBottom="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_round_format_dimension"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="1024 x 1024 px"
                    android:textSize="8dp"
                    android:textStyle="italic"
                    android:textColor="@color/white" />
            </FrameLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_round_format_black"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                <!-- quality -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_round_format_black"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_gravity="bottom">
                    <RelativeLayout
                        android:id="@+id/media_panel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|center_horizontal"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_round_format_black"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:layout_gravity="bottom|center_horizontal">

                        <TextView
                            android:id="@+id/media_format"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:gravity="left|right|center|start|end"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:layout_marginRight="6dp"
                            android:layout_centerVertical="true"
                            android:minWidth="30dp"
                            android:minHeight="14dp"
                            android:textColor="@color/text_info_roundect_value"
                            android:textSize="11sp"
                            android:background="@drawable/shape_round_format_normal"
                            android:text="FLAC"/>

                        <TextView
                            android:id="@+id/media_samplerate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:gravity="left|right|center|start|end"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:layout_marginRight="6dp"
                            android:layout_centerVertical="true"
                            android:minWidth="30dp"
                            android:minHeight="14dp"
                            android:textColor="@color/text_info_roundect_value"
                            android:textSize="11sp"
                            android:background="@drawable/shape_round_format_normal"
                            android:layout_toRightOf="@+id/media_format"
                            android:text="16 bits/44.1 kHz"/>
                        <TextView
                            android:id="@+id/media_filesize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:gravity="left|right|center|start|end"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:layout_marginRight="6dp"
                            android:layout_centerVertical="true"
                            android:minWidth="30dp"
                            android:minHeight="14dp"
                            android:textColor="@color/text_info_roundect_value"
                            android:textSize="11sp"
                            android:background="@drawable/shape_round_format_normal"
                            android:layout_toRightOf="@+id/media_samplerate"
                            android:text="10 MB"/>
                        <TextView
                            android:id="@+id/media_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:gravity="left|right|center|start|end"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:layout_marginRight="6dp"
                            android:layout_centerVertical="true"
                            android:minWidth="30dp"
                            android:minHeight="14dp"
                            android:textColor="@color/text_info_roundect_value"
                            android:textSize="11sp"
                            android:background="@drawable/shape_round_format_normal"
                            android:layout_toRightOf="@+id/media_filesize"
                            android:text="5:20"/>
                    </RelativeLayout>
                </RelativeLayout>
                <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:visibility="gone"
                    app:mpb_progressStyle="horizontal"
                    android:background="@drawable/shape_round_format_black"
                    style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal" />
                <TextView
                    android:id="@+id/media_path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="0dp"
                    android:textSize="8dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:background="@color/float_transparent_80"
                    android:text="File Location"/>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/metadata_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin">
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/tagContainer">
                <android.support.v7.widget.CardView
                    android:id="@+id/editorCardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xsmall"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="@dimen/spacing_xsmall"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:id="@+id/editorPanel"
                        android:orientation="vertical"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <include layout="@layout/include_metadata_editor" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_save_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        android:src="@drawable/ic_beenhere_black_24dp"
        android:layout_gravity="top|right"
        android:tint="@android:color/white"
        app:layout_anchor="@id/tagContainer"
        app:layout_anchorGravity="top|right"
        app:backgroundTint="@color/fab_save_background"
        app:fabSize="normal"/>
</android.support.design.widget.CoordinatorLayout>