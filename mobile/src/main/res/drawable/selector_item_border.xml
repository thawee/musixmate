<?xml version="1.0" encoding="utf-8"?>
<selector android:exitFadeDuration="@android:integer/config_longAnimTime"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_focused="true" >
		<shape android:shape="rectangle">
			// The width and color of the border
			<stroke android:width="2dp" android:color="@color/now_playing" />

			// The desired corner radius. reduce it to keep it less rounded
			<corners android:radius="4dp" />

			// the inside color
			<solid android:color="@color/material_color_deep_purple_400" />

			// Add your desired padding
			<padding android:left="0dp" android:top="2dp" android:right="0dp" android:bottom="2dp" />
		</shape>
	</item>
	<item android:state_pressed="true" >
		<shape android:shape="rectangle">
			// The width and color of the border
			<stroke android:width="2dp" android:color="@color/now_playing" />

			// The desired corner radius. reduce it to keep it less rounded
            <corners android:radius="4dp" />

			// the inside color
			<solid android:color="@color/material_color_deep_purple_400" />

			// Add your desired padding
            <padding android:left="0dp" android:top="2dp" android:right="0dp" android:bottom="2dp" />
		</shape>
	</item>
	<item android:state_activated="true" >
		<shape android:shape="rectangle">
			// The width and color of the border
			<stroke android:width="2dp" android:color="@color/now_playing" />

			// The desired corner radius. reduce it to keep it less rounded
            <corners android:radius="4dp" />

			// the inside color
			<solid android:color="@color/material_color_deep_purple_400" />

			// Add your desired padding
            <padding android:left="0dp" android:top="2dp" android:right="0dp" android:bottom="2dp" />
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			// The width and color of the border
			<stroke android:width="2dp" android:color="@color/now_playing" />

			// The desired corner radius. reduce it to keep it less rounded
            <corners android:radius="4dp" />
			// Add your desired padding
			<padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp" />
		</shape>
	</item>
</selector>